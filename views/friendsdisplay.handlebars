<div class="top-bar"></div>
<img class="logo" src="../icons/logo.png">

<div class="row margin-left-5em scroll top-space">
    <div class="row">

        {{#each buddy}}
        <div class="card">
            <img src="..." class="card-img-top" alt="...">
            <div class="my-card-body">
                <h2>{{name}},{{age}}<span class="big-font margin-left-5em blue noopct">{{prefered_trip}}</span></h2>
                <p>interests:<span class="regular-font bold noopct">{{intrests}}</span>
                    <br>
                    top destination:<span class="bold regular-font noopct">{{dest1}}|{{dest2}}|{{dest3}}</span>
                </p>
            </div>
        </div>
        {{/each}}
    </div>
</div>